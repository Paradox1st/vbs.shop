{{#if spotlight}}
<div class="row my-3">
  <div id="spotlightCarousel" class="col carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li
        data-target="#spotlightCarousel"
        data-slide-to="0"
        class="active"
      ></li>
      <li data-target="#spotlightCarousel" data-slide-to="1"></li>
      <li data-target="#spotlightCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      {{#each spotlight}}
      <div class="carousel-item">
        <div class="row no-gutters bg-dark text-light">
          <div class="col-md-6 mb-md-0 p-md-4">
            <img
              class="d-block w-100"
              src="{{ this.imgs.[0] }}"
              alt="First slide"
            />
          </div>
          <div class="container col-md-6 position-static p-4 pl-md-0">
            <h5 class="mt-0">{{ this.name }}</h5>
            <p>{{ this.price }} T</p>
            <form
              action="/cart/add/{{ this._id }}"
              method="POST"
              class="d-flex justify-content-around"
            >
              {{#with this}}
              {{> _item_opts}}
              {{/with}}
              <button class="btn btn-danger" type="submit">Add to Cart</button>
            </form>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    <a
      class="carousel-control-prev"
      href="#spotlightCarousel"
      role="button"
      data-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a
      class="carousel-control-next"
      href="#spotlightCarousel"
      role="button"
      data-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
{{/if}}

{{#if pagination}}
<div class="row">
  {{#each items}}
  {{#with this}}
  <div class="col col-sm-3 my-3">
    <div class="card">
      <img src="{{ this.imgs.[0] }}" alt="img" class="card-img-top" />
      <div class="card-body">
        <h5 class="card-title">{{ name }}</h5>
        <p class="card-text">{{ price }}</p>
        <form
          action="/cart/add/{{ this._id }}"
          method="POST"
          class="d-flex justify-content-around"
        >
          {{> _item_opts}}
          <button class="btn btn-danger" type="submit">Add to Cart</button>
        </form>
      </div>
    </div>
  </div>
  {{/with}}
  {{/each}}
</div>
{{#with pagination}}
<div class="row">
  {{#if pages}}
  <ul class="pagination">
    <li class="page-item {{#if disablePrev}}disabled{{/if}}">
      <a href="{{ prev }}" class="page-link">Prev</a>
    </li>
    {{#each pages}}
    <li
      class="page-item {{#if (compare ../currentPage this.number)}}active"
      aria-current="page{{/if}}"
    >
      <a href="{{ this.url }}" class="page-link">{{ this.number }}</a>
    </li>
    {{/each}}
    <li class="page-item {{#if disableNext}}disabled{{/if}}">
      <a href="{{ next }}" class="page-link">Next</a>
    </li>
  </ul>
  {{/if}}
</div>
{{/with}}
{{/if}}
